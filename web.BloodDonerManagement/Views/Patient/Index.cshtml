@model  List<web.BloodDonerManagement.Models.PatientsViewModel>
<h3> Lista e Pacientave</h3>
<button  type="button" class="btn btn-primary btn-addPatient">
    <i class="glyphicon glyphicon-plus" ></i>
    Add new</button>
<br/><br/>
<table class="table table-responsive table-striped">
    <th>
        Emri
    </th>
    <th>
        Data e lindjes
    </th>
    <th>
        Grupi i gjakut
    </th>
    <th></th>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Patient
            </td>
            <td>
                @item.BirthDate.ToShortDateString()
            </td>
            <td>
                @item.BloodType
            </td>
            <td>
                <div class="text-right">
                    <button type="button" class="btn btn-default btn-edit" data-id="@item.Id" data-name="@item.Name" 
                            data-lastname="@item.LastName"
                            data-birthdate="@item.BirthDate.ToShortDateString()"
                            data-bloodtype="@item.BloodType.ToString()">
                        <i class="glyphicon glyphicon-pencil"></i>
                    </button> 

                    <form action="/Patient/delete/@item.Id" method="post" id="@("formDelete"+item.Id)"></form>
                    <button type="button" class="btn btn-default  btn-delete"  data-id="@item.Id">
                        <i class="glyphicon glyphicon-trash"></i>
                    </button> 
                </div>
            </td>
        </tr>
    }

</table>

<div class="modal fade" tabindex="-1" role="dialog" id="modalPatient">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"> </h4>
            </div>
            <div class="modal-body">
                <form action="/Patient/addupdate" method="post" id="formPatient">
                    <input type="hidden" name="Id" id="Id" value="0" />
                    <div class="row">
                        <div class="col-sm-4">
                            <label>Emri</label>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" name="Name" id="Name" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4">
                            <label>Mbiemri</label>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" name="LastName" id="LastName" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <label>Data e lindjes</label>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" name="BirthDate" id="BirthDate" class="form-control" placeholder="yyyy-mm-dd" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4">
                            <label>Grupi i gjakut</label>
                        </div>
                        <div class="col-sm-8">
                            <select class="form-control" name="BloodType" id="BloodType">
                                <option value="">...</option>
                                @foreach (var item in ViewBag.bloodtype)
                            {
                                    <option value="@item">@item</option>
                            }
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Mbyll</button>
                <button type="button" class="btn btn-primary btn-save">Ruaj</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script>
    $(document).ready(function () {

        $('#BirthDate').datetimepicker({
            format: 'YYYY-MM-DD',
            showTodayButton:true
        });

        $('.btn-addPatient').click(function () {
            $('.modal-title').html('Pacient i ri');
            $('#modalPatient').modal('show');
        });

        $('.btn-save').click(function () {
            $('#formPatient').submit();
        });

        $('.btn-edit').click(function () {
            var item = $(this);
            $('.modal-title').html('Edito pacientin ' + item.data('name'));
           
            $('#Id').val(item.data('id'));
            $('#Name').val(item.data('name'));
            $('#LastName').val(item.data('lastname'));
            $('#BirthDate').val(item.data('birthdate'));
            $('#BloodType').val(item.data('bloodtype'));
            $('#modalPatient').modal('show');
        });

        $('.btn-delete').click(function () {
            if (confirm('Deshironi te fshini shenimin?') == 1) {

                $('#formDelete' + $(this).data('id')).submit();
            }
        });
    });
</script>